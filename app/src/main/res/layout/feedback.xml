<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <TextView
        android:layout_centerHorizontal="true"
        android:id="@+id/doyoulike"
        android:layout_margin="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Do you like this app?"
        android:textStyle="bold"
        android:textSize="30sp"/>


    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animation_view"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/rating" />


    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/btn_android"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="15dp"
        android:padding="10dp"
        fancy:fb_iconResource="@drawable/ic_chevron_right"
        fancy:fb_defaultColor="#478442"
        fancy:fb_focusColor="#313131"
        fancy:fb_radius="64dp"
        fancy:fb_textColor="#FFFFFF" />
</RelativeLayout>